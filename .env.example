# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=INFO

# Azure AD Configuration
# Register your application at https://portal.azure.com
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here
AZURE_TENANT_ID=your_tenant_id_here
REDIRECT_URI=http://localhost:3000/auth/callback

# Database Configuration
# Options: 'sqlite' (default, zero-config) or 'postgresql' (production)
DB_TYPE=sqlite

# SQLite Configuration (default - no password required)
# The database file will be created automatically
SQLITE_DB_PATH=./data/office365_scanner.db

# PostgreSQL Configuration (only needed if DB_TYPE=postgresql)
# Uncomment and configure these if you want to use PostgreSQL:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=office365_scanner
# DB_USER=postgres
# DB_PASSWORD=your_database_password_here

# Session Configuration
# Generate a secure random string for production
SESSION_SECRET=your_session_secret_here_change_in_production

# Scanning Configuration
# Number of concurrent requests to Microsoft Graph API
CONCURRENT_REQUESTS=5

# Delay between requests in milliseconds
REQUEST_DELAY=100

# Maximum number of retries for failed requests
MAX_RETRIES=3

